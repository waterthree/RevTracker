<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="RevTrackerFrame" hidden="true" enableMouse="true" movable="true" frameStrata="DIALOG" toplevel="true">
        <Size>
            <AbsDimension x="300" y="400"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\\DialogFrame\\UI-DialogBox-Background"
                  edgeFile="Interface\\DialogFrame\\UI-DialogBox-Border"
                  tile="true">
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
        </Backdrop>

        <TitleRegion>
            <Size>
                <AbsDimension x="280" y="20"/>
            </Size>
            <Anchors>
                <Anchor point="TOP" y="-10"/>
            </Anchors>
        </TitleRegion>

        <Layers>
            <Layer level="ARTWORK">
                <FontString name="RevTrackerTitle" inherits="GameFontNormal" text="RevTracker">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP" y="-20"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <!-- Button to add current target -->
        <Frames>
            <Button name="RevTrackerAddTargetButton" inherits="UIPanelButtonTemplate" text="Add Target">
                <Size>
                    <AbsDimension x="120" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="TOP" relativePoint="TOP" y="-50"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        RevTracker_AddTarget()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>
